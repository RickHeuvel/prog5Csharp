<Window x:Class="NinjaManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NinjaManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        DataContext="{Binding Main, Source={StaticResource Locator} }">
    <StackPanel Orientation="Horizontal">
        <Button Command="{Binding ShowManageNinjasCommand}" Content="ManageNinjas" Width="300" Height="150" Margin="50"></Button>
        <Button Command="{Binding ShowManageEquipmentCommand}" Content="ManageEquipment" Width="300" Height="150" Margin="50"></Button>
    </StackPanel>
</Window>
