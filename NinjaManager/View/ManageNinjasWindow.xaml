<Window x:Class="NinjaManager.View.ManageNinjasWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NinjaManager.View"
        mc:Ignorable="d"
        Title="ManageNinjaWindow" Height="450" Width="800"
         DataContext="{Binding ManageNinjas, Source={StaticResource Locator} }">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <DataGrid ItemsSource="{Binding Ninjas}" SelectedItem="{Binding SelectedNinja}"></DataGrid>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <TextBlock Text="Name:" Margin="10,0,10,0"></TextBlock>
            <TextBox Text="{Binding SelectedNinja.Name, Mode=TwoWay}" Margin="10,0,10,0"></TextBox>
            <TextBlock Text="Gold:" Margin="10,0,10,0"></TextBlock>
            <TextBox Text="{Binding SelectedNinja.Gold, Mode=TwoWay}" Margin="10,0,10,0"></TextBox>
            <Button Content="Edit" Command="{Binding EditNinjaCommand}" Height="38" Margin="10,10,10,0"/>
        </StackPanel>
    </Grid>
</Window>
