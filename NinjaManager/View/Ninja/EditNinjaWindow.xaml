<Window x:Class="NinjaManager.View.EditNinjaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NinjaManager.View"
        mc:Ignorable="d"
        Title="EditNinjaWindow" Height="250" Width="300"
        DataContext="{Binding EditNinja, Source={StaticResource Locator}}">
    <StackPanel Grid.Column="1">
        <TextBlock Text="Name:" Margin="10,10,10,0"></TextBlock>
        <TextBox Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="10,0,10,0" ></TextBox>
        <TextBlock Text="Gold:" Margin="10,0,10,0"></TextBlock>
        <TextBox Text="{Binding Gold, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="10,0,10,0"></TextBox>
        <Button Content="Edit" Command="{Binding EditNinjaCommand}" Height="38" Margin="10,10,10,0"/>
    </StackPanel>
</Window>
